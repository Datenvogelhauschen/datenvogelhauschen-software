{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": "es2021",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "listEmittedFiles": true,
    "forceConsistentCasingInFileNames": false,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "rootDir": "src"
  }
}
